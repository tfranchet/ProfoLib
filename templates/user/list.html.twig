{% extends 'base.html.twig' %}

{% block title %}Hello RdvController!{% endblock %}

{% block body %}

    {% include '/header.html.twig' %}

<div>
    <ul>
        {% if is_granted('ROLE_PROFESSEUR') or is_granted('ROLE_ADMIN') %}
        <h2>Etudiants</h2>
        {% for etudiant in etudiants %}
        <li>{{ etudiant.email }}
            {% if is_granted('ROLE_ADMIN') %}
        <a href="{{ path('rdv_take', {'id' : etudiant.id}) }}"> Vue étudiante</a>
            {% endif %}
        </li>
        {% endfor %}
        {% endif %}
        <h2>Professeurs</h2>
        {% for professeur in professeurs %}
        <li>{{ professeur.email }}
            {% if is_granted('ROLE_ADMIN') %}
        <a href="{{ path('rdv_add', {'id' : professeur.id }) }}"> Créer rdv </a>
            {% endif %}
        </li>
        {% endfor %}
    </ul>
</div>
{% endblock %}
