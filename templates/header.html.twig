{% extends 'base.html.twig' %}

{% block body %}
<style>
    .head { background-color: #5eb5e0; width: 100%; display: flex; flex-direction: row; height: 20%}
    .navigate {display: flex; flex-direction: row; flex-basis: 80%; justify-content: center; padding-left: 2%; padding-right: 2%; margin-bottom: 2%; margin-top: 2%}
    .account {display: flex; flex-direction: row; flex-basis: 20%; justify-content: center; padding-left: 2%; padding-right: 2%; margin-bottom: 2%; margin-top: 2%}
    .navigate_button {background-color: #DDDDDD; margin-left: 1%; margin-right: 1%; padding-right: 1%; padding-left: 1% }
    a{color: black; text-decoration: none}
</style>

<div class="head">
    <div class="navigate">
        {% if is_granted('ROLE_ADMIN') %}
        <div class="navigate_button">
            <h4><a href="{{ path("useradd") }}">Creer un utilisateur</a> </h4>
        </div>
        <div class="navigate_button">
            <h4><a href="{{ path("userlist") }}">Liste utilisateurs</a> </h4>
        </div>
        <div class="navigate_button">
            <h4><a href="{{ path("add_account") }}">Creer un compte</a> </h4>
        </div>
        {% endif %}
        {% if is_granted('ROLE_ETUDIANT') %}
        <div class="navigate_button">
            <h4><a href="{{ path("rdv_take", {'id': app.user.profile.id}) }}">Prendre rdv</a> </h4>
        </div>
        <div class="navigate_button">
            <h4><a href="{{ path("userlist") }}">Liste Professeurs</a> </h4>
        </div>
        {% endif %}
    </div>
    <div class="account">
        {% if app.user is null %}
        <div class="navigate_button">
            <h4><a href="{{ path("app_login") }}">login</a> </h4>
        </div>
            {% else %}
                <div class="navigate_button">
                    <h4><a href="{{ path("app_logout") }}">logout</a> </h4>
                </div>
        {% endif %}
    </div>
</div>
{% endblock %}
